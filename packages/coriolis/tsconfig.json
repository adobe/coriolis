{
  "extends": "../../node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist/cjs",
    "noImplicitAny": true,
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": ["dist", "node_modules", "../../node_modules"],
}
